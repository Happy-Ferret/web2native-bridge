<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <context-param>
        <description>Key Password</description>
        <param-name>key_password</param-name>
        <param-value>@key-password@</param-value>
    </context-param>
 
    <context-param>
        <description>Bank EE Certificate</description>
        <param-name>bank_eecert</param-name>
        <param-value>@bank-eecert@</param-value>
    </context-param>

    <context-param>
        <description>Bank Host</description>
        <param-name>bank_host</param-name>
        <param-value>@bank-host@</param-value>
    </context-param>
    
    <context-param>
        <description>Bank Decryption Key #1</description>
        <param-name>bank_decryptionkey1</param-name>
        <param-value>@bank-decryptionkey1@</param-value>
    </context-param>

    <context-param>
        <description>Bank Decryption Key #2</description>
        <param-name>bank_decryptionkey2</param-name>
        <param-value>@bank-decryptionkey2@</param-value>
    </context-param>

    <context-param>
        <description>Merchant Network Root Certificate</description>
        <param-name>merchant_root</param-name>
        <param-value>@merchant-root@</param-value>
    </context-param>

    <context-param>
        <description>Bank Client Root</description>
        <param-name>bank_client_root</param-name>
        <param-value>@bank-client-root@</param-value>
    </context-param>

    <context-param>
        <description>Server Port Mapping (may be undefined)</description>
        <param-name>server_port_map</param-name>
        <param-value>@server-port-map@</param-value>
    </context-param>

    <listener>
        <listener-class>org.webpki.w2nb.webpayment.keyprovider.KeyProviderService</listener-class>
    </listener>

    <servlet>
        <servlet-name>KeyProviderServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.keyprovider.KeyProviderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>KeyProviderInitServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.keyprovider.KeyProviderInitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>KeyProviderServlet</servlet-name>
        <url-pattern>/getkeys</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>KeyProviderInitServlet</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>

</web-app>
