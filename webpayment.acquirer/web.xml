<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <context-param>
        <description>Key Password</description>
        <param-name>key_password</param-name>
        <param-value>@key-password@</param-value>
    </context-param>
 
    <context-param>
        <description>Merchant EE Certificate</description>
        <param-name>merchant_eecert</param-name>
        <param-value>@merchant-eecert@</param-value>
    </context-param>

    <context-param>
        <description>Payment Network Root Certificate</description>
        <param-name>payment_root</param-name>
        <param-value>@payment-root@</param-value>
    </context-param>

    <context-param>
        <description>Bank Port Mapping (may be undefined)</description>
        <param-name>bank_port_map</param-name>
        <param-value>@bank-port-map@</param-value>
    </context-param>

    <context-param>
        <description>Currency</description>
        <param-name>currency</param-name>
        <param-value>@currency@</param-value>
    </context-param>

    <context-param>
        <description>Add the 'Unusual' card</description>
        <param-name>add_unusual_card</param-name>
        <param-value>@add-unusual-card@</param-value>
    </context-param>

    <context-param>
        <description>Force media type error</description>
        <param-name>err_media_type</param-name>
        <param-value>@err-media-type@</param-value>
    </context-param>

    <context-param>
        <description>Web2Native Bridge wallet name</description>
        <param-name>w2nb_name</param-name>
        <param-value>@w2nb-name@</param-value>
    </context-param>

    <listener>
        <listener-class>org.webpki.w2nb.webpayment.merchant.MerchantService</listener-class>
    </listener>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ShoppingServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.ShoppingServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserPaymentServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.UserPaymentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DirectModePaymentServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.DirectModePaymentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IndirectModePaymentServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.IndirectModePaymentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DebugServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.DebugServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ShoppingServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserPaymentServlet</servlet-name>
        <url-pattern>/userpay</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DirectModePaymentServlet</servlet-name>
        <url-pattern>/directpay</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndirectModePaymentServlet</servlet-name>
        <url-pattern>/indirectpay</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DebugServlet</servlet-name>
        <url-pattern>/debug</url-pattern>
    </servlet-mapping>
    @security-constraints@    
</web-app>
