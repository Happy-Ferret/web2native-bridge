<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <context-param>
        <description>Card font name</description>
        <param-name>card_font</param-name>
        <param-value>@card-font@</param-value>
    </context-param>

    <context-param>
        <description>Key Password</description>
        <param-name>key_password</param-name>
        <param-value>@key-password@</param-value>
    </context-param>
 
    <context-param>
        <description>Bank EE Certificate</description>
        <param-name>bank_eecert</param-name>
        <param-value>@bank-eecert@</param-value>
    </context-param>

    <context-param>
        <description>Bank Decryption Key #1</description>
        <param-name>bank_decryptionkey1</param-name>
        <param-value>@bank-decryptionkey1@</param-value>
    </context-param>

    <context-param>
        <description>Bank Decryption Key #2</description>
        <param-name>bank_decryptionkey2</param-name>
        <param-value>@bank-decryptionkey2@</param-value>
    </context-param>

    <context-param>
        <description>Merchant Network Root Certificate</description>
        <param-name>merchant_root</param-name>
        <param-value>@merchant-root@</param-value>
    </context-param>

    <context-param>
        <description>Bank Client Root</description>
        <param-name>bank_client_root</param-name>
        <param-value>@bank-client-root@</param-value>
    </context-param>
    
    <listener>
        <listener-class>org.webpki.w2nb.webpayment.merchant.MerchantService</listener-class>
    </listener>

    <servlet>
        <servlet-name>PaymentCoreServlet</servlet-name>
        <servlet-class>org.webpki.w2nb.webpayment.merchant.PaymentProviderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PaymentProviderServlet</servlet-name>
        <url-pattern>/transact</url-pattern>
    </servlet-mapping>
@security-constraints@    
</web-app>
